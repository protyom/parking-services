# Docker Image Configuration
APP_IMAGE=protyom/parking-monitoring:app


# PostgreSQL Database Configuration
POSTGRES_HOST=db_postgres
POSTGRES_PORT=5432
POSTGRES_DB=parking
POSTGRES_USER=parking
POSTGRES_PASSWORD=your_secure_postgres_password

# Database URLs
# For worker connecting to localhost (when using host network mode)
WORKER_DATABASE_URL=postgresql://parking:your_secure_postgres_password@127.0.0.1:5432/parking

# For services connecting via Docker network
DATABASE_URL=postgresql://parking:your_secure_postgres_password@db_postgres:5432/parking


# Camera Configuration (JSON format)
# Format: {"cameras": [{"connection": "rtsp://user:pass@ip:port/stream", "sections": [...]}]}
# Example with one camera and three parking sections:
CAMERA_CONF='{"cameras": [{"connection": "rtsp://username:password@192.168.1.100:554/stream1", "sections": [{"name": "section_a", "verbose_name": "Section A - Main Entrance", "capacity": 10, "polygon": [[100, 200], [300, 200], [300, 400], [100, 400]]}, {"name": "section_b", "verbose_name": "Section B - North Side", "capacity": 8, "polygon": [[350, 200], [550, 200], [550, 400], [350, 400]]}, {"name": "section_c", "verbose_name": "Section C - Along Building", "capacity": 12, "polygon": [[0, 450], [600, 450], [600, 600], [0, 600]]}]}]}'

# Redis Configuration
REDIS_ADDR=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password

# Django Allowed Hosts (comma-separated)
# Use * for development, specific domains for production
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# YOLOv8 Model Path
# Path to the YOLO model file (relative to /app/ in Docker container)
YOLO_PATH=yolov8x.pt
